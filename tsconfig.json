{
    "compilerOptions": {
        "target": "ES2021",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "sourceRoot": "./src",
        "outDir": "./dist"
    },
    "include": [
        "./src/*"
    ],
    "exclude": [
        "node_modules"
    ]
}